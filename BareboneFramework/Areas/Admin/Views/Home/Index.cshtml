@model Base.Infrastructure.Model.ApplicationInfo
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { EncType = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.ApplicationName, "Application Name:", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.HiddenFor(model => model.Id)
            @Html.TextBoxFor(model => model.ApplicationName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ApplicationName, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CompanyName, "Company Name:", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Header Image?", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.CheckBoxFor(model => model.IsHeaderImage)
        </div>
    </div>    
    <div class="form-group">
        @Html.Label("Logo Image:", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <input type="file" name="logofile" id="logofile" class="form-control" />
            @Html.HiddenFor(model => model.LogoPath)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HeaderText, "Header Html:", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.TextAreaFor(model => model.HeaderText, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Header Background:", new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <input type="file" name="headerbg" id="headerbg" class="form-control" />
            @Html.HiddenFor(model => model.HeaderBackground)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-7 pull-right">
            <input class="btn btn-primary" type="submit" value="submit" />
            <input class="btn btn-info" type="reset" value="reset" />
        </div>
    </div>
}
