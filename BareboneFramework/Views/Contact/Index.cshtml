@model BareboneFramework.Models.ContactViewModel

@{
    ViewBag.Title = "title";
}

@using (Html.BeginForm("SendMail", "Contact", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <div class="row form-group">
        @Html.LabelFor(model => model.FirstName, "First Name:", new{@class="control-label col-md-2"})
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control col-md-5" })
        @Html.ValidationMessageFor(model => model.FirstName,"", new{@class="text-danger"})
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.LastName, "Last Name:", new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control col-md-5" })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.Email, "Email:", new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-5" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.Comment, "Comments:", new { @class = "control-label col-md-2" })
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control col-md-5" })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <div class="form-group col-md-9 pull-right">
            <input class="btn btn-primary" type="submit" value="submit" />
            <input class="btn btn-info" type="reset" value="reset" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}