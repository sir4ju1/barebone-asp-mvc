@model IEnumerable<Base.Infrastructure.Model.News>
@{
    ViewBag.Title = "Home";
}

<div class="row space-bottom">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="@Url.Content("~/Content/Images/E-card-jani-bg.png")" alt="..." width="100%" />
                <div class="carousel-caption">
                    First Image
                </div>
            </div>
            <div class="item">
                <img src="@Url.Content("~/Content/Images/Splash-Page-bg.png")" alt="..." width="100%" />
                <div class="carousel-caption">
                    First Image
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
<div class="row border-shade">
    <div class="col-md-6">

        <h4><span>Hot News</span></h4>
        <div style="text-align:left;">
            <ul>
                @foreach (var item in Model)
                {
                    <li style="margin:15px;">
                        <a href="/News/">@item.NewsHeadline</a>
                    </li>
                }
            </ul>
        </div>
        <p align="right"><a href="/News/"><font><font>More &gt;&gt;&gt;</font></font></a></p>


    </div>

    <div class="col-md-6 border-shade2" style="height: 300px;">
        <h4><span>Sales Location</span></h4>
        <div>
            <a href="/Contact#show-room" class="">
                <img height="200" width="400" class="img-thumbnail center-block" alt="Home Page Images" src="" />
            </a>
        </div>



    </div>

</div>